<div class="simple-calendar">
  <div class="d-flex align-items-center justify-content-between my-2">

    <%= link_to t('simple_calendar.previous', default: 'Previous'), calendar.url_for_previous_view, class: 'btn btn-custom btn-calendar' %>
    <h3 class="calendar-title"><%= t('date.abbr_month_names')[start_date.month] %> <%= start_date.year %></h3>
    <%= link_to t('simple_calendar.next', default: 'Next'), calendar.url_for_next_view, class: 'btn btn-custom btn-calendar' %>
  </div>

  <table class="table">


    <tbody>
      <% date_range.each_slice(7) do |dates| %>
        <tr>
          <% dates.each do |date| %>
            <% @posts = Post.joins(:challenge).where(challenges: { user_id: current_user.id }) %>
            <% @post = @posts.find_by(date: date) %>
              <% if !@post.nil? %>
                <% if @post.photo.attached? %>
                  <% my_event = "photo" %>
                <% elsif @post.song_url %>
                  <% my_event = "song" %>
                <% elsif @post.poem %>
                  <% my_event = "poem" %>
                <% elsif @post.text %>
                  <% my_event = "quote" %>
                <% end %>
              <% else %>
                <% my_event = "none" %>
              <% end %>



            <%= content_tag :td, class: [calendar.td_classes_for(date), my_event].flatten do %>
              <% passed_block.call date.day, sorted_events.fetch(date, []) %>
            <% end %>

          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
