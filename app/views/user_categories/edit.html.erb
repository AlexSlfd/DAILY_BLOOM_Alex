<div class="content-wrap editpage">
  <h1>Choose all topics you are interested in</h1>
  <%= simple_form_for @user, url: update_user_category_path(@user), method: :patch do |f| %>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |c| %>
      <%= c.check_box(class: "tag-selector") + c.label(class: 'tag-item') %>
    <% end %>
    <div>
      <%= f.submit class: "btn-custom btn-challenge" %>
    </div>
  <% end %>
</div>
